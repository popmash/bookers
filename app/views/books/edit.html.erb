<div class="container">
  <div class="row pt-3 pb-5">
    <div class="col-md-5 mx-auto">
      <h1 class="row">Editing Book</h1>
      <%= render 'error', book: @book %>
      <%= form_with model: @book,local: true do |f| %>
      <div class="form-group-title row">
      <%= f.label :Title, class: 'w-100' %>
      <%= f.text_field :title, class: 'form-control ' %>
      </div>
      <div class="form-group-body pt-3 row">
      <%= f.label :Opinion, class: 'w-100' %>
      <%= f.text_area :body, class: 'form-control ' %>
      </div>
      <div class="form-group-send py-3 row">
      <%= f.submit "Update Book", class: 'btn btn-success' %>
      </div>
      <div class="row">
      <%= link_to "Show", @book %>&nbsp;|&nbsp;<%= link_to "Back", books_path %>
      </div>
      <% end %>
    </div>
  </div>
</div>


