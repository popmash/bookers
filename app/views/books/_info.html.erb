<h2>User info</h2>
  <%= image_tag current_user.get_profile_image, size: '100x100' %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row pb-3">
  <%= link_to edit_user_path(current_user), class: 'btn btn-outline-secondary w-100' do %>
  <i class="fas fa-user-cog "></i>
  <% end %>
  </div>