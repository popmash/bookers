<div class="container">
  <%= render 'layouts/error', book_new: @book_new %>
  <div class="row pt-3 pb-5">
    <div class="col-md-3">
      <%= render 'info',user: current_user %>
      <%= render 'form', book_new: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1 ml-auto">
    <h2>Books</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th colspan></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
         <td>
           <%= link_to book.user do %>
           <%= image_tag book.user.get_profile_image,size: '80x80' %>
           <% end %>
           </td>
         <td><%= link_to book.title, book_path(book) %></td>
         <td><%= book.body %></td>
             <%= render 'favorites/favorite', book: book %>
         <td><%= render 'book_comments/count', book: book %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>