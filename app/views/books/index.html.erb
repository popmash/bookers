<div class="container">
  <%= render 'layouts/error', book_new: @book_new %>
  <div class="row pt-3 pb-5">
    <div class="col-md-3">
      <%= render 'info' %>
      <%= render 'form', book_new: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1 ml-auto">
    <h2>Books</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th colspan></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
         <td>
           <%= link_to book.user do %>
           <%= image_tag book.user.get_profile_image,size: '80x80' %>
           <% end %>
           </td>
         <td><%= link_to book.title, book_path(book) %></td>
         <td><%= book.body %></td>
         <% if book.favorited_by?(current_user) %>
          <td>
           <%= link_to book_favorites_path(book),class: 'text-danger', method: :delete do %>
           <i class="fas fa-heart"></i><%= book.favorites.count %>
           <% end %>
          </td>
          <% else %>
          <td>
            <%= link_to book_favorites_path(book),method: :post do %>
            <i class="far fa-heart"></i><%= book.favorites.count %>
            <% end %>
          </td>
          <% end %>
         <td>コメント数: <%= book.book_comments.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>