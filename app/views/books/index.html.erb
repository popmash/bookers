<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image, size: '100x100' %>
      <table class="table">
        <thead>
          <tr>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
      <%= link_to books_path, class: 'btn btn-outline-secondary w-100' do %>
      <i class="fas fa-user-cog "></i>
      <% end %>
      </div>
      <h2>New book</h2>
      <%= form_with model: @book_new,local: true do |f| %>
      <div class="form-group">
      <%= f.label :Title %>
      <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Opinion %><br>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div> 
      <%= f.submit "Create Book", class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
    <div class="col-md-8 off-set-1">

    </div>
  </div>
</div>