<h2>７日間分の投稿数</h2>
     <table class="table table-bordered">
       <thead>
         <tr>
           <th>6日前</th>
           <th>5日前</th>
           <th>4日前</th>
           <th>3日前</th>
           <th>2日前</th>
           <th>1日前</th>
           <th>今日</th>
         </tr>
       </thead>
       <tbody>
         <tr>
           <% this_week_book_counts.each do |book_day| %>
           <td><%= book_day %></td>
           <% end %>
         </tr>
       </tbody>
     </table>
     <canvas id="bookChart"></canvas>
     <script>
     $(document).on('turbolinks:load', function() {
       const ctx = document.getElementById('bookChart')
       new Chart(ctx, {
         type: 'line',
         data: {
           labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
           datasets: [{
             label: '投稿した本の数',
             data: <%= this_week_book_counts %>,
             borderColor: 'blue',
             tension: 0.4,
           }]
         },
         options: {
           plugins: {
             title: {
               display: true,
               text: '７日間の投稿数の比較'
             }
           },
           y: {
             min: 0,
             max: 10,
           },
         },
       });
     });
     </script>