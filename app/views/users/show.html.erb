<div class="container">
  <div class="row pt-3 pb-5">
    <div class="col-md-3">
      <%= render 'books/info',current_user: @user %>
      <%= render 'books/form', book_new: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1 ml-auto">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
           <th cplspan="3"></th>
           <th>Title</th>
           <th>Opinion</th>
          </tr>
        </thead>
        <tbody >
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to book.user do%>
              <%= image_tag book.user.get_profile_image,size: '80x80' %>
              <% end %>
              </td>
            <td><%= link_to book.title, book %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>