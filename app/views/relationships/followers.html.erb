<h1>Follower Users</h1>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image,size: '80x80' %></td>
      <td><%= user.name %></td>
      <td>フォロー数: <%= user.followings.count %></td>
      <td><%= user.followers.count %></td>
      <td><%= link_to "Show", user %></td>
    </tr>
     <% end %>
  </tbody>
</table>