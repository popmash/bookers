<table>
 <tbody>
   <% book.book_comments.each do |book_comment| %>
   <tr>
     <td>
       <%= image_tag book_comment.user.get_profile_image,size: '80x80' %><br>
       <%= link_to book_comment.user.name,book_comment.user %>
     </td>
     <td><%= book_comment.comment %></td>
     <td><%= link_to 'Destroy', book_book_comment_path(book_comment,book),remote: true,method: :delete,class: 'btn btn-danger btn-sm' %></td>
   </tr>
   <% end %>
 </tbody>
</table>

