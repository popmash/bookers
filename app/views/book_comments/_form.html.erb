<% if book_comments.exists? %>
       <table>
         <tbody>
           <% book.book_comments.each do |book_comment| %>
           <tr>
             <td>
               <%= image_tag book_comment.user.get_profile_image,size: '80x80' %><br>
               <%= link_to book_comment.user.name,book_comment.user %>
             </td>
             <td><%= book_comment.comment %></td>
             <td><%= link_to 'Destroy', book_book_comment_path(book_comment),method: :delete,class: 'btn btn-danger btn-sm' %></td>
           </tr>
           <% end %>
         </tbody>
       </table>
      <% end %>
      
      <%= form_with model: [book,book_comment_new],local: true do |f| %>
      <%= f.text_area :comment, class: 'form-control',rows: '4',placeholder: 'コメントを入力する'%><br>
      <%= f.submit "送信" %>
      <% end %>