<h1 id="room" data-room="<%= room.id %>" data-user="<%= current_user.id %>">
    <%= @user.name %>さんとのチャット
</h1>
<div class="messages">
  <% chats.each do |chat| %>
    <% if chat.user_id == current_user.id %>
     <p style="text-align: right;"><%= chat.message %></p>
    <% else %>
     <p style="text-align: left;"><%= chat.message %></p>
    <% end %>
  <% end %>
</div>


